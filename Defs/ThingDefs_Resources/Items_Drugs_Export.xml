<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- ============================== Greenbud Jars ============================== -->

  <ThingDef ParentName="ResourceBase">
    <defName>CC_Greenbud_jar</defName>
    <label>Greenbud jar</label>
    <description>A plastic jar made from plastic, contain greenbud.</description>
    <graphicData>
      <texPath>Things/Item/Drug/CC_Greenbud_jar</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.95</drawSize>
    </graphicData>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>20</WorkToMake>
      <MarketValue>405</MarketValue>
      <Mass>0.60</Mass>
      <DeteriorationRate>1.0</DeteriorationRate>
      <Flammability>0.2</Flammability>
    </statBases>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
        <li>DrugLab</li>
        <li>CC_packing_station</li>
      </recipeUsers>
      <bulkRecipeCount>4</bulkRecipeCount>
    </recipeMaker>
    <costList>
      <CC_Greenbud>10</CC_Greenbud>
      <CC_Jar>1</CC_Jar>
    </costList>
  </ThingDef>

