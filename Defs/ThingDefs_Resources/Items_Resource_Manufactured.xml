  <ThingDef ParentName="MedicineBase">
    <defName>CC_Greenbud_Salve</defName>
    <label>Greenbud Salve</label>
    <description>A soothing topical ointment made by infusing the psychoactive compounds from greenbud into a neutral carrier like herbal paste or fat. Used for pain relief or minor wound soothing.</description>
    <possessionCount>3</possessionCount>
    <graphicData>
      <texPath>Things/Item/Resource/Medicine/CC_Greenbud_Salve</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <statBases>
      <MarketValue>18</MarketValue>
      <Mass>0.50</Mass>
      <Flammability>0.7</Flammability>
      <MedicalPotency>0.80</MedicalPotency>
      <MedicalQualityMax>1.00</MedicalQualityMax>
      <DeteriorationRate>2</DeteriorationRate>
      <WorkToMake>500</WorkToMake>
    </statBases>
    <costList>
      <MedicineHerbal>1</MedicineHerbal>
      <CC_Greenbud>1</CC_Greenbud>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
